<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hex Share - Admin</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>

<body>
    <div class="dashboard-wrapper">
        <div id="particles-js" class="particle-background"></div>

        <div class="dashboard-container glass-effect">
            <nav class="main-nav glass-effect">
                <div class="nav-content">
                    <div class="nav-brand">
                        <h2 class="gradient-text">Hex Share</h2>
                        <button class="hamburger-btn shine-effect">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>

                    <div class="nav-links">
                        <button class="nav-btn shine-effect" onclick="window.location.href='/dashboard'">
                            <i class="fas fa-home"></i>
                            Dashboard
                        </button>

                        <button class="nav-btn shine-effect" onclick="window.location.href='/files'">
                            <i class="fas fa-folder"></i>
                            Files
                        </button>

                        <button class="nav-btn shine-effect" onclick="window.location.href='/auth/logout'">
                            <i class="fas fa-sign-out-alt"></i>
                            Logout
                        </button>
                    </div>
            </nav>
            <div id="notification-container"></div>
            <div class="dashboard-header glass-effect">
                <div class="welcome-section">
                    <span class="greeting-tag shine-effect">Admin Control</span>
                    <h1 class="gradient-text">Admin Dashboard</h1>
                    <div class="user-stats">
                        <div class="tier-badge premium-badge shine-effect">
                            <i class="fas fa-shield-alt"></i>
                            System Administrator
                        </div>
                    </div>
                </div>
            </div>

            <div class="admin-nav-section glass-effect">
                <center><div class="nav-grid">
                    <a href="#overview" class="nav-item active hover-lift">
                        <div class="nav-icon glow-effect">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <span>Overview</span>
                    </a>
                    <a href="#users" class="nav-item hover-lift">
                        <div class="nav-icon glow-effect">
                            <i class="fas fa-users"></i>
                        </div>
                        <span>Users</span>
                    </a>
                    <a href="#files" class="nav-item hover-lift">
                        <div class="nav-icon glow-effect">
                            <i class="fas fa-folder"></i>
                        </div>
                        <span>Files</span>
                    </a>
                </div></center>
            </div>
            <main class="admin-content">
                <!-- Overview Section -->
                <div id="overview" class="content-section">
                    <div class="admin-header glass-effect">
                        <div class="header-content">
                            <span class="section-tag">Control Panel</span>
                            <h1 class="gradient-text">Admin Dashboard</h1>
                        </div>
                        <div class="header-actions">

                        </div>
                    </div>

                    <div class="chart-grid">
                        <div class="chart-card glass-effect hover-lift">
                            <div class="chart-header">
                                <div class="chart-icon glow-effect">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h3 class="gradient-text">User Growth</h3>
                            </div>
                            <canvas id="userGrowthChart"></canvas>
                        </div>

                        <div class="chart-card storage-card glass-effect hover-lift">
                            <div class="chart-header">
                                <div class="chart-icon glow-effect">
                                    <i class="fas fa-database"></i>
                                </div>
                                <h3 class="gradient-text">Storage Usage</h3>
                            </div>
                            <canvas id="storageChart"></canvas>
                        </div>

                    </div>

                </div>

                <!-- Users Section -->
                <div id="users" class="content-section glass-effect" style="display: none;">
                    <div class="dashboard-header glass-effect">
                        <div class="welcome-section">
                            <span class="greeting-tag shine-effect">User Management</span>
                            <h1 class="gradient-text">System Users</h1>
                            <div class="header-actions">
                            </div>
                        </div>
                    </div>

                    <div class="users-table-container glass-effect">
                        <table class="users-table">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Tier</th>
                                    <th>Storage Used</th>
                                    <th>Files</th>
                                    <th>Joined</th>
                                </tr>
                            </thead>
                            <tbody id="userTableBody">
                                <!-- Populated by JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Files Section -->
                <div id="files" class="content-section" style="display: none;">
                    <div class="admin-header glass-effect">
                        <div class="header-content">
                            <span class="section-tag">File Management</span>
                            <h1 class="gradient-text">System Files</h1>
                        </div>
                        <div class="header-actions">
                            <button class="btn btn-primary shine-effect" onclick="exportFileData()">
                                <i class="fas fa-download"></i>
                                Export Files
                            </button>
                        </div>
                    </div>

                    <div class="file-filters glass-effect">
                        <div class="search-bar">
                            <i class="fas fa-search"></i>
                            <input type="text" placeholder="Search files..." id="fileSearch">
                        </div>
                    </div>

                    <div class="files-table-container glass-effect">
                        <table class="files-table">
                            <thead>
                                <tr>
                                    <th>File</th>
                                    <th>Owner</th>
                                    <th>Size</th>
                                    <th>Uploaded</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="fileTableBody">
                                <!-- Populated by JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
        </div>
        </main>
    </div>
    </div>
    <%- include('partials/footer') %>
        <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="/js/particles.js"></script>
        <script src="/js/admin.js"></script>
        <script src="/js/notifications.js"></script>
        <script>
            // Mobile menu functionality
            document.addEventListener('DOMContentLoaded', () => {
                const mobileMenuBtn = document.querySelector('.hamburger-btn');
                const mobileMenu = document.querySelector('.nav-links');

                function toggleMobileMenu() {
                    mobileMenu.classList.toggle('active');
                }

                mobileMenuBtn.addEventListener('click', toggleMobileMenu);
            });
        </script>

</body>

</html>